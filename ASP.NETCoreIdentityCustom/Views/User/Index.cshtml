@{
    ViewData["Title"] = "Users";
}

@model Dictionary<ASP.NETCoreIdentityCustom.Areas.Identity.Data.ApplicationUser, IList<string>>
<div class="text-center">
    <h1 class="display-4">Users</h1>
    @if (@Model != null && @Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roli</th>
                    <th scope="col">Edit</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var userRole in Model)
                {
                    <tr>
                        <td>@userRole.Key.Id</td>
                        <td>@userRole.Key.FirstName</td>
                        <td>@userRole.Key.LastName</td>
                        <td>@userRole.Key.Email</td>
                        <td>
                            @foreach (var role in userRole.Value)
                            {
                                if (@role != null)
                                {
                                    <span>@role</span>
                                }
                                else
                                {
                                    <span>No role associated</span>
                                }
                            }
                        </td>
                       

                        
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@userRole.Key.Id">Edit</a>
                        </td>
                        
                    </tr>
                   
                }
             
            </tbody>
           

        </table>

